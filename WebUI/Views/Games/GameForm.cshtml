
@model WebUI.Models.Games.ViewModels.GameFormViewModel

<script src="~/JS/Games/form.js"></script>

@using (Html.BeginForm(Model.FormName, "Games", FormMethod.Post))
{
    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel>@Model.FormName</h4>
    </div>
    <div class="modal-body">
        <h2>Edit</h2>
        <div class="form-horizontal">
            <hr />
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Game.GameId)

            <div class="form-group">
                @Html.LabelFor(model => model.Game.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Game.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Game.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Game.Description, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Game.Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Game.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Game.MinPlayers, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Game.MinPlayers, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "1", @value = "0" } })
                    @Html.ValidationMessageFor(model => model.Game.MinPlayers, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Game.MaxPlayers, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Game.MaxPlayers, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "1", @value = "0" } })
                    @Html.ValidationMessageFor(model => model.Game.MaxPlayers, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Game.RecommendedAge, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Game.RecommendedAge, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "0", @step = "1", @value = "0" } })
                    @Html.ValidationMessageFor(model => model.Game.RecommendedAge, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <input type="submit" value="Save" class="btn btn-success submit" />
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
}


